{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": { "*": ["node_modules/*"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
